@model IEnumerable<SchoolDBAccess.StudentTable>

@{
    ViewBag.Title = "Students";
}

<p>
    @Html.ActionLink("Enter New Student", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Students</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FatherName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MotherName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateOfBirth)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gender)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StudentIdCard)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Photo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AdmissionDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PreviousSchool)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PreviousClassAverage)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmailAddress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nationality)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FatherOccupation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MotherOccupation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FatherPhoneNo_)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MotherPhoneNo_)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClassTable.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProgramTable.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SessionTable.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserTable.FullName)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FatherName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MotherName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateOfBirth)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentIdCard)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Photo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AdmissionDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PreviousSchool)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PreviousClassAverage)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmailAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nationality)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FatherOccupation)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MotherOccupation)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FatherPhoneNo_)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MotherPhoneNo_)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProgramTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SessionTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserTable.FullName)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.StudentID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.StudentID }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.StudentID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
