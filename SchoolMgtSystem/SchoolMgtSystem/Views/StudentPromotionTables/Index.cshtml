@model IEnumerable<SchoolDBAccess.StudentPromotionTable>

@{
    ViewBag.Title = "Student Promotions";
}

<p>
    @Html.ActionLink("Enter New Promotion", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Promotions</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PromoteDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AnnualFree)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsPromote)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsSubmitFee)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClassTable.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProgramSession.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SectionTable.SectionName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StudentTable.Name)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PromoteDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AnnualFree)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsPromote)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsSubmitFee)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProgramSession.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SectionTable.SectionName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentTable.Name)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.StudentPromoteID}, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.StudentPromoteID }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.StudentPromoteID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
